<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:background="@drawable/radius_background4"
    android:layout_marginTop="8dp"
    android:paddingLeft="25px"
    android:paddingRight="25px"
    android:paddingTop="15px"
    android:paddingBottom="15px">

    <RelativeLayout
        android:id="@+id/item_resource_share_top"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/white"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_resource_share_head_portrait"
            android:layout_width="70px"
            android:layout_height="70px"
            android:src="@drawable/head_log1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/item_resource_share_head_portrait"
            android:layout_toLeftOf="@+id/item_resource_share_enter_other">

            <TextView
                android:id="@+id/item_resource_share_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:gravity="center_vertical"
                android:textColor="@color/plan_user_name_text_color"
                android:textSize="25px"/>

        </LinearLayout>

        <TextView
            android:id="@+id/item_resource_share_enter_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="进入Ta的资源库>>"
            android:textColor="@color/green"
            android:textSize="15px"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/item_resource_share_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:lineSpacingMultiplier="1.5"
        android:paddingBottom="15px"
        android:paddingTop="15px"
        android:textSize="30px"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="10px">

        <TextView
            android:id="@+id/item_resource_share_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="云盘链接："/>

        <TextView
            android:id="@+id/item_resource_share_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_resource_share_txt1"
            android:layout_toLeftOf="@+id/item_resource_share_copy"
            android:layout_marginLeft="15px"
            android:layout_marginRight="10px"
            android:textIsSelectable="true"/>

        <TextView
            android:id="@+id/item_resource_share_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="复制链接"
            android:layout_alignParentRight="true"
            android:background="@drawable/radius_background_buttongreen1"
            android:padding="10px"
            android:textSize="15px"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="15px">

        <TextView
            android:id="@+id/item_resource_share_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="云盘种类："/>

        <TextView
            android:id="@+id/item_resource_share_link_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_resource_share_txt2"
            android:layout_marginLeft="15px"/>
        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="15px">

        <TextView
            android:id="@+id/item_resource_share_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="链接密码："/>

        <TextView
            android:id="@+id/item_resource_share_link_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_resource_share_txt3"
            android:layout_marginLeft="15px"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/item_resource_share_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:textSize="15px"
        android:textColor="@color/colorAccent"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:orientation="horizontal"
        android:layout_marginTop="20px">
        
        <TextView
            android:id="@+id/item_resource_share_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="评论"
            android:gravity="center"
            android:textSize="25px"
            android:background="@drawable/radius_background7"/>

        <TextView
            android:id="@+id/item_resource_share_acknowledge"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="答谢Ta"
            android:gravity="center"
            android:textSize="25px"
            android:background="@drawable/radius_background7"
            android:layout_marginLeft="1px"/>
    </LinearLayout>

</LinearLayout>