<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/radius_background4"
    android:paddingTop="10px"
    android:paddingBottom="20px"
    android:paddingRight="30px"
    android:paddingLeft="30px"
    android:layout_marginTop="20px"
    android:layout_marginRight="10px"
    android:layout_marginLeft="10px">

    <TextView
        android:id="@+id/item_respond_leave_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/statue_2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="申请学生："
        android:textSize="20px"
        android:textColor="@color/green"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/white"
        android:paddingBottom="10px"
        android:paddingTop="10px">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_respond_leave_head_portrait"
            android:layout_width="70px"
            android:layout_height="70px"
            android:src="@drawable/head_log1"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/item_respond_leave_head_portrait"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/item_respond_leave_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:gravity="center_vertical"
                android:textColor="@color/plan_user_name_text_color"
                android:textSize="25px"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请假信息："
        android:textSize="20px"
        android:textColor="@color/green"
        android:layout_marginTop="10px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓         名："/>

        <TextView
            android:id="@+id/item_respond_leave_student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班         级："/>

        <TextView
            android:id="@+id/item_respond_leave_class_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请假原因："/>

        <TextView
            android:id="@+id/item_respond_leave_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间："/>

        <TextView
            android:id="@+id/item_respond_leave_begin_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="归假时间："/>

        <TextView
            android:id="@+id/item_respond_leave_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_respond_leave_real_end_time_body"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实际归假时间："
            android:textColor="@color/green"/>

        <TextView
            android:id="@+id/item_respond_leave_real_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="10px"
        android:layout_marginTop="15px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请时间："
            android:textSize="15px"
            android:textColor="@color/red1"/>

        <TextView
            android:id="@+id/item_respond_leave_release_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:textSize="15px"
            android:textColor="@color/red1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_respond_leave_disagree"
            android:layout_width="0px"
            android:layout_height="80px"
            android:layout_weight="1"
            android:background="@drawable/radius_background_buttongreen4"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="不同意"
            android:textSize="35px"/>

        <TextView
            android:id="@+id/item_respond_leave_agree"
            android:layout_width="0px"
            android:layout_height="80px"
            android:layout_weight="1"
            android:background="@drawable/radius_background_buttongreen4"
            android:textColor="@color/white"
            android:layout_marginLeft="2px"
            android:gravity="center"
            android:text="同    意"
            android:textSize="35px"/>
    </LinearLayout>

</LinearLayout>