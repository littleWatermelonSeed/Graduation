<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/radius_background4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_background4"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/pop_acknowledge_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ta的收款码"
            android:layout_marginTop="15px"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/pop_acknowledge_view_pager"
            android:layout_width="500px"
            android:layout_height="500px"
            android:layout_marginTop="20px"/>

        <TextView
            android:id="@+id/pop_acknowledge_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="滑动查看更多..."
            android:textSize="15px"
            android:textColor="@color/red1"
            android:layout_marginTop="10px"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/pop_acknowledge_save_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存二维码"
            android:layout_marginTop="20px"
            android:background="@drawable/radius_background_buttongreen1"
            android:paddingTop="5px"
            android:paddingBottom="5px"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存二维码后去微信/支付转账答谢"
            android:textSize="15px"
            android:layout_marginTop="5px"
            android:textColor="@color/green"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"
            android:layout_marginTop="20px"/>

        <TextView
            android:id="@+id/pop_acknowledge_cancle"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:text="取         消"
            android:gravity="center"
            android:textSize="35px"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"/>
    </LinearLayout>

</LinearLayout>