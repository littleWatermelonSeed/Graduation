<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home_page_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sayhellototheworld.littlewatermelon.graduation.view.center_activity.centerplaza_fragment.HomePageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@color/home_page_top_bar">

        <TextView
            android:id="@+id/fragment_home_page_school_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="手掌上的校园"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/fragment_home_page_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学生 倪远杰"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gray"
            android:layout_marginTop="7dp"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_home_page_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <View
            android:id="@+id/fragment_home_page_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:alpha="0.7"/>

        <TextView
            android:id="@+id/fragment_home_page_login_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="点击去登录..."
            android:textSize="20sp"
            android:layout_gravity="center"/>
    </FrameLayout>



</LinearLayout>
