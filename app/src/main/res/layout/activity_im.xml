<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white1"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white">

        <ImageView
            android:id="@+id/activity_im_back"
            android:layout_width="40px"
            android:layout_height="50px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15px"
            android:textSize="30px"
            android:src="@drawable/topbar_back"/>

        <ImageView
            android:id="@+id/activity_im_more"
            android:layout_width="35px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/plus_sign_1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_im_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="15sp"
                android:text="聊天"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/activity_im_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/activity_im_chat_body"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:textColor="@color/gray">
                    
                    <ImageView
                        android:id="@+id/activity_im_chat_icon"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:src="@drawable/chat_checked"/>
                    <TextView
                        android:id="@+id/activity_im_chat_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="聊天"
                        android:textColor="@color/statue2"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_im_friend_body"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:textColor="@color/gray">

                    <ImageView
                        android:id="@+id/activity_im_friend_icon"
                        android:layout_width="40px"
                        android:layout_height="40px"
                        android:src="@drawable/friend_unchecked"/>
                    <TextView
                        android:id="@+id/activity_im_friend_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="好友"
                        android:textColor="@color/white4"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
