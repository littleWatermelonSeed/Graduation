<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_message_body"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120px"
    android:orientation="horizontal"
    android:paddingLeft="20px"
    android:paddingRight="20px">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_message_icon"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_centerVertical="true"
        android:src="@drawable/lost_and_find"/>

    <TextView
        android:id="@+id/item_message_no_read_num"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_circle_red"
        android:text="9"
        android:gravity="center"
        android:textSize="20px"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/item_message_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_message_icon"
        android:layout_toLeftOf="@+id/item_message_no_read_num"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:text="失物招领   消息"
        android:textSize="25px"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20px"
        android:layout_marginLeft="20px"/>

</RelativeLayout>