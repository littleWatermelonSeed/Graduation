<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/white">

        <TextView
            android:id="@+id/activity_write_announcement_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="返回"
            android:textSize="30px"/>

        <TextView
            android:id="@+id/activity_write_announcement_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="发布"
            android:textSize="30px"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_write_announcement_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="发布公告"
                android:textSize="15sp"/>

        </LinearLayout>
    </RelativeLayout>

    <EditText
        android:id="@+id/activity_write_announcement_edt_title"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_below="@+id/activity_write_line"
        android:layout_marginTop="10px"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="标题(30字以内)..."
        android:maxLength="30"
        android:singleLine="true"
        android:textColor="@color/white4"
        android:textSize="30px"/>

    <EditText
        android:id="@+id/activity_write_announcement_edt_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:drawable/editbox_background_normal"
        android:gravity="left"
        android:hint="内容(500字以内)..."
        android:lineSpacingMultiplier="1.5"
        android:maxLength="500"
        android:minLines="4"
        android:paddingBottom="10px"
        android:paddingTop="10px"
        android:textColor="@color/white4"
        android:textSize="30px"/>

</LinearLayout>
