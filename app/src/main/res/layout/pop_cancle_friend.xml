<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/radius_background4">

    <TextView
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:text="删除好友"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:textSize="30px"/>

    <TextView
        android:id="@+id/pop_cancle_friend_remark"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxLength="50"
        android:layout_marginTop="20px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:text="解除好友关系后,你也将从对方的好友列表消失,确定解除好友关系?"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px">

        <TextView
            android:id="@+id/pop_cancle_friend_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/radius_background_buttongreen1"
            android:layout_marginLeft="20px"
            android:layout_marginRight="1px"/>

        <TextView
            android:id="@+id/pop_cancle_friend_ensure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确认解除"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginLeft="1px"
            android:layout_marginRight="20px"
            android:background="@drawable/radius_background_buttongreen1"/>
    </LinearLayout>

</LinearLayout>