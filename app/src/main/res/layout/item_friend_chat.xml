<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_friend_chat_body"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/item_friend_chat_left_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10px"
            android:paddingLeft="15px"
            android:paddingTop="10px"
            android:minHeight="90px"
            android:layout_toLeftOf="@+id/item_friend_chat_no_read_num">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_friend_chat_head_portrait"
                android:layout_width="70px"
                android:layout_height="70px"
                android:src="@drawable/head_log1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_friend_chat_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:gravity="center_vertical"
                    android:textColor="@color/green"
                    android:textSize="30px"/>

                <TextView
                    android:id="@+id/item_friend_chat_last_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5px"
                    android:textSize="25px"
                    android:ellipsize="end"
                    android:layout_marginRight="10px"
                    android:singleLine="true"
                    android:lineSpacingMultiplier="1.5"/>

                <TextView
                    android:id="@+id/item_friend_chat_last_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5px"
                    android:textSize="15px"
                    android:layout_marginRight="10px"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/item_friend_chat_no_read_num"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_circle_red"
            android:gravity="center"
            android:textSize="20px"
            android:textColor="@color/white"
            android:layout_marginRight="20px"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"
        android:layout_marginTop="5dp"/>

</LinearLayout>