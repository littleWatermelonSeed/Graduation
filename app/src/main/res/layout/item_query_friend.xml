<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_query_friend_body"
    android:paddingTop="30px"
    android:paddingBottom="30px"
    android:paddingRight="20px"
    android:paddingLeft="20px"
    android:layout_marginTop="10px"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_query_friend_head_portrait"
        android:layout_width="70px"
        android:layout_height="70px"
        android:src="@drawable/head_log1"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/item_query_friend_student_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_query_friend_head_portrait"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20px"/>

</RelativeLayout>