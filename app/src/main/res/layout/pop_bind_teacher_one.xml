<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/radius_background4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输入辅导员邀请码"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"/>

    <EditText
        android:id="@+id/pop_bind_teacher_one_invitation_code"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:layout_marginRight="10px"
        android:layout_marginLeft="10px"
        android:gravity="center"
        android:background="@android:drawable/editbox_background_normal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px">

        <TextView
            android:id="@+id/pop_bind_teacher_one_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:gravity="center"
            android:background="@drawable/radius_background_buttongreen1"
            android:layout_marginLeft="10px"
            android:layout_marginRight="1px"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/pop_bind_teacher_one_bind"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="绑定"
            android:gravity="center"
            android:layout_marginLeft="1px"
            android:layout_marginRight="10px"
            android:textColor="@color/white"
            android:background="@drawable/radius_background_buttongreen1"/>
    </LinearLayout>
</LinearLayout>