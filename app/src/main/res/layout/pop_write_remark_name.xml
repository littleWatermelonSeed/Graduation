<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/radius_background4">

    <TextView
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:text="修改备注名"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:textSize="30px"/>

    <LinearLayout
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="40px"
        android:layout_marginRight="20px"
        android:layout_marginTop="25px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注名:"
            android:textSize="30px"/>

        <EditText
            android:id="@+id/pop_write_remark_name_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:gravity="center_vertical"
            android:paddingTop="20px"
            android:paddingBottom="20px"
            android:maxLength="10"
            android:textColor="@color/black1"
            android:background="@android:drawable/editbox_background_normal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:layout_marginTop="25px"
        android:layout_marginBottom="20px">

        <TextView
            android:id="@+id/pop_write_remark_name_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/radius_background_buttongreen1"
            android:layout_marginLeft="20px"
            android:layout_marginRight="1px"/>

        <TextView
            android:id="@+id/pop_write_remark_name_ensure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确认"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginLeft="1px"
            android:layout_marginRight="20px"
            android:background="@drawable/radius_background_buttongreen1"/>
    </LinearLayout>

</LinearLayout>