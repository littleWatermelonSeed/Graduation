<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:paddingRight="35px"
    android:paddingLeft="35px"
    android:paddingBottom="30px"
    android:paddingTop="30px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_forum_head_portrait"
            android:layout_width="70px"
            android:layout_height="70px"
            android:src="@drawable/head_log1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_forum_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/plan_user_name_text_color"
                android:textSize="30px"/>

            <TextView
                android:id="@+id/item_forum_school_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:textSize="20px"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/item_forum_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.5"
        android:layout_marginTop="20px"/>

    <com.sayhellototheworld.littlewatermelon.graduation.customwidget.MyGridView
        android:id="@+id/item_forum_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:layout_marginTop="20px"
        android:gravity="center_horizontal"
        android:horizontalSpacing="15dp"
        android:verticalSpacing="8dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_marginTop="15px">

        <TextView
            android:id="@+id/item_forum_release_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20px"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/item_forum_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="20px"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"/>

        <ImageView
            android:id="@+id/item_forum_comment_icon"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_toLeftOf="@+id/item_forum_comment_num"
            android:src="@drawable/comment"
            android:layout_marginRight="10px"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/item_forum_like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/item_forum_comment_icon"
            android:textSize="20px"
            android:layout_marginRight="40px"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/item_forum_like_icon"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_toLeftOf="@+id/item_forum_like_num"
            android:src="@drawable/like"
            android:layout_marginRight="10px"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/white2"
        android:layout_marginTop="10px"/>

    <TextView
        android:id="@+id/item_forum_comment"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:background="@drawable/radius_background9"
        android:layout_marginTop="20px"
        android:text="我要来吐槽"
        android:gravity="center_vertical"
        android:paddingLeft="20px"
        android:textSize="20px"
        android:textColor="@color/white3"/>

</LinearLayout>