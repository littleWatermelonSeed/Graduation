            android:theme="@style/NoActionBarTranslucentTheme"/>
        <activity android:name=".view.home_page_function_view.flea_mark.WriteFleaMarkActivity"
                  android:theme="@style/NoActionBarTranslucentTheme">
        </activity>
        <activity android:name=".view.home_page_function_view.flea_mark.FleaMsgDetailsActivity"
                  android:theme="@style/NoActionBarTranslucentTheme">
        </activity>
    </application>

</manifest>